{% extends 'Layout/main.html.twig' %}

{% block javascripts %}
<script type="text/javascript">
$( function() {
//	$( document ).on( 'click', '#join-teamspeak', teamspeak );
} );
function teamspeak( event ) {

	var url = $( this ).attr( 'href' ),
	    w   = window.open( url, '_blank', 'status=0,toolbar=0,menubar=0,height=0,width=0,top=-10,left=-10' );
	if(w !== null) {	
		w.close();
		if ( confirm( 'You either need Teamspeak, or your OS doesn't like this link. Would you like to download it?' ) ) {
			window.location.href = 'http://teamspeak.com/?page=downloads';
		} else {
			alert( "If you know you already have teamspeak, then connect to ts.st-gc.org on port 9987" );
		}
	} else {
		w.close();
	}

	return false;
}
</script>
{% endblock %}

